{% if include.relativeSrc %}
    {% capture src %}/assets/posts/{{ page.date | date: "%Y-%m-%d" }}-{{ page.title | slugify }}/{{ include.relativeSrc }}{% endcapture %}
{% else %}
    {% capture src %}{{ include.src }}{% endcapture %}
{% endif %}

{% if include.fullwidth %}
{% comment %}<div class="fullwidth-container">{% endcomment %}
    {% comment %}<div class="fullwidth">{% endcomment %}
{% endif %}
<figure>
    <img class="responsive-img" src="{{ src }}" {% if include.alt %} alt="{{ include.alt }}" {% endif %}/>
{% if include.caption %}
    <figcaption><span>{{ include.caption }}</span></figcaption>
{% endif %}
</figure>

{% if include.fullwidth %}
    {% comment %}</div>{% endcomment %}
{% comment %}</div>{% endcomment %}
{% endif %}
